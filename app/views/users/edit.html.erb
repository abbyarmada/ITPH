<% # in app/views/users/view.erb %>
<h2>Editing Information for <%=session[:user_id]%></h2>
<%= form_for [@user] do |form| %>
<%= form.label:Name %><br>
<%= form.text_field:name %> <br>
<%= form.label:Email %><br>
<%= form.text_field:email %> <br>
<%= form.label:"Phone Number" %><br>
<%= form.text_field:phone_number %> <br>

<%= form.submit %><br>
<% end %>

<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>